<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/eseName"
        style="@style/ShadowTextView.LightGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:maxLines="2"
        android:text="Ese nome"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eseAddress"
        style="@style/ShadowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eseName"
        android:layout_below="@+id/eseName"
        android:maxLines="2"
        android:minLines="1"
        android:text="ese via" />

</RelativeLayout>