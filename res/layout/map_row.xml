<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
        <com.google.android.maps.MapView
        android:id="@+id/mapsView" android:layout_width="fill_parent"
        android:layout_height="100dip" android:clickable="true"
        android:apiKey="0MUOOylmBmamGNJzuw1ZVkBSp-zopF0XaAvX42g" />
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/mapImageProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/refreshButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ricarica mappa"
        android:textSize="12sp"
        android:visibility="invisible" />

    </RelativeLayout>

    <TextView
            android:id="@+id/cellKind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map"
            android:visibility="gone" />
    

    <TextView
        android:id="@+id/mapInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp" />

</LinearLayout>