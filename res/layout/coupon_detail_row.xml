<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingTop="3dp" >

    <it.wm.CachedAsyncImageView
        android:id="@+id/couponImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:gravity="center_vertical" >

    </it.wm.CachedAsyncImageView>

     <TextView
         android:id="@+id/couponDifference"
         style="@style/ShadowTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/couponImage"
         android:layout_marginLeft="16dp"
         android:layout_toRightOf="@+id/couponImage"
         android:text="Risparmio"
         android:textSize="12sp" />

     <TextView
         android:id="@+id/couponDiscount"
         style="@style/ShadowTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/couponDifference"
         android:layout_below="@+id/couponDifference"
         android:maxLength="35"
         android:text="Sconto"
         android:textSize="12sp" />

     <TextView
         android:id="@+id/couponNormalPrice"
         style="@style/ShadowTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/couponDiscount"
         android:layout_below="@+id/couponDiscount"
         android:text="Prezzo pieno"
         android:textSize="12sp" />

     <TextView
         android:id="@+id/couponPrice"
         style="@style/ShadowTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/couponDifference"
         android:layout_marginRight="31dp"
         android:background="@drawable/rounded_edges"
         android:padding="2dp"
         android:text="Solo"
         android:layout_centerInParent="true"
         android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>

