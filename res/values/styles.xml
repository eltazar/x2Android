<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.PerDue" parent="@style/Theme.Sherlock.Light"> <!-- .DarkActionBar"> -->
        <!--<item name="android:actionBarStyle">@style/Widget.PerDue.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.PerDue.ActionBar</item>-->
        <item name="android:actionBarStyle">@style/Theme.PerDue.ActionBar</item>
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
    </style>
    
    <style name="Theme.PerDue.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">#FF4444</item>
        <item name="android:titleTextStyle">@style/Theme.PerDue.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.PerDue.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    
    
    <!-- style the items within the overflow menu -->
	<style name="MyDropDownListView" parent="Widget.Sherlock.PopupMenu">
    	<!-- This is the orange text color -->
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:background">#FFD1D1</item>
	</style>
	
	<style name="ShadowTextView">
        <item name="android:shadowColor">#E0E0E0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
    </style>
    
	<style name="ShadowTextView.LightGray">
        <item name="android:textColor">#F8F8F8</item>
    </style>

